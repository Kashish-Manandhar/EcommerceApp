<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity">
    <include
        layout="@layout/toolbar"
        android:id="@+id/productadd_tool"

        />
 <ImageView
     android:layout_width="150dp"
     android:layout_height="150dp"
     android:id="@+id/productadd_img"
     android:layout_below="@id/productadd_tool"
     android:src="@drawable/select_product_image"
     android:layout_centerHorizontal="true"
     android:layout_margin="15dp"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/productadd_name"
    android:hint="Product Name"
    android:layout_below="@id/productadd_img"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productadd_description"
        android:hint="Product Description"
        android:layout_below="@id/productadd_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"/>
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/productadd_price"
    android:hint="Product Price"
    android:layout_below="@id/productadd_description"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productadd_quantity"
        android:hint="Product Quantity"
        android:layout_below="@id/productadd_price"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productadd_quantity"
        android:layout_centerHorizontal="true"
        android:id="@+id/priductadd_save"
        android:text="Add"/>

</RelativeLayout>